<Window x:Class="MedicalLaboratory.BlockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система заблокирована" 
        Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Система заблокирована!" 
                       FontFamily="Comic Sans MS" FontSize="20"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock x:Name="lblTimer" Text="" 
                       FontFamily="Comic Sans MS" FontSize="16"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Попробуйте войти снова после разблокировки." 
                       FontFamily="Comic Sans MS" FontSize="14"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>